@model dynamic
@{
	ViewBag.Title = Model.Title;
}
<section>
	<h2>@ViewBag.Title</h2>

	<p class="alert error meow">
		@Model.Message
		<img src="http://placekitten.com/100/100" width="100" height="100" />
	</p>

	@if (Model.AuthenticationAllowed) {<p>
		@Html.ActionLink("Please log on using your user name and password.", "LogOn", "Account")
	</p>}
</section>